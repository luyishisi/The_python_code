<script>
var TB404 = {
	config: {
		loginTBUrl: "http://tieba.baidu.com/f?ie=utf-8&kw=",
		searchGlobal: "http://tieba.baidu.com/f/search/res?ie=utf-8&qw=",
                homePage: "http://tieba.baidu.com",
		iframeSrc: "http://tieba.baidu.com/errorpage/getGoodThread",
		isLogin : false
	},
	jump: function(url){
		$.tb.location.setHref(url);
	},
	searchEvent: function(){
		var self = this;
		var $container = $("#search-form");
		$container.on("click", ".j_login_tb", function(e){
			e.preventDefault();
			var param = $container.find(".search-input").val();
			self.jump(self.config.loginTBUrl + param);
		});
                $container.on("click", ".tb-logo", function(){
			self.jump(self.config.homePage);
		});
	},
	judgetIframe: function(){
		var self = this;
		$.get("/errorpage/getGoodThread").done(function(res){
			if(/class=\"page_404_iframe\"/.test(res)){
				$("#error_404_iframe").tbattr("src", self.config.iframeSrc);
			}
		}).fail(function(res){

		}).always(function(res){
		
		});
	},
	init: function(){
		this.judgetIframe();
		this.searchEvent();
	}
};
$(function(){
	$("#main-wraper").addClass("animateOpacity");
	TB404.init();
});
</script>
